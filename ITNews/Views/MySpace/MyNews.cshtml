
@{
    ViewData["Title"] = "MyNews";
}
<link href="~/css/mySpace/myNews.css" rel="stylesheet" />
<h1>MyNews</h1>

<div id="myNewsBlock" class="">
    <input type="button" v-on:click="addNewsButtonClick" class="btn btn-light" name="addNews" value="Add News" />
    <div id="createNewsArea">
        <div class="form-group">
            <label class="col-form-label">Name</label>
            <input class="form-control" type="text" name="name" value="" 
                   v-model="newNews.name"/>
        </div>
        <div class="form-group">
            <label class="col-form-label">Description</label>
            <input class="form-control" type="text" name="name" value="" 
                   v-model="newNews.description"/>
        </div>
        <div class="form-group">
            <textarea class="form-control" id="createNewsTextArea" v-model="newNews.content" ></textarea>
        </div>
        <div style="text-align:right">
            <input id="applyNewNews" type="button" v-on:click="addNews" style="display:inline-block" class="btn btn-light" name="apply" value="Apply" />
        </div>
    </div>
    <hr />
    <div class="col-md-6">
        <div class="list-group">
            <div v-for="item in news" class="list-group-item list-group-item-action">
                <a v-bind:href="item.url" class="list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{item.name}}</h5>
                        <small>3 days ago</small>
                    </div>
                    <p class="mb-1">{{item.description}}</p>
                </a>
                <small>{{item.authorName}}</small>
                <button v-on:click="deleteNews(item.id)" type="button" class="close"><span aria-hidden="true">&times;</span></button>
            </div>


<script>
    jQuery(document).ready(function ($) {
        window.newNewsMarkDown = $('#createNewsTextArea').markdownEditor({
            preview: true,
            height: '200px',
            onPreview: function (content, callback) {
                callback(marked(content));
            }
        });

    });

    let loader = new Loader({ getActionsUrl: domainPath + '/api/myspace/getActions' });
    loader.getActions()
        .done(function (data) {
            let service = new MySpaceService(data.actions);
            let viewModel = new MyNewsViewModel(service);
            viewModel.myNewsBlock.initialize();
        })

